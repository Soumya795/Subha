public class Lpattern {
    public static void main(String[] args) {
        int a = 2000;
        System.out.println("Enter the Year");
        if (a % 4 == 0) {
            if (a % 100 == 0) {
                if (a % 400 == 0) {
                    System.out.println("Given year is a Leap year");
                } else {
                    System.out.println("Given year is Not a leap year");
                }
            }
        }
    }
}
